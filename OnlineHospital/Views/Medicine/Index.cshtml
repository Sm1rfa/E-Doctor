@using OnlineHospital.Models
@model IEnumerable<OnlineHospital.Models.Medicine>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MedicineName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeseaseId)
        </th>
        <th></th>
    </tr>

    @foreach (Medicine item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedicineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeseaseId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.MedicineId}) |
                @Html.ActionLink("Details", "Details", new {id = item.MedicineId}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.MedicineId})
            </td>
        </tr>
    }

</table>